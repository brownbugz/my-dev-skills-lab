<%- include('../partials/header') %>

<h1><%= title %></h1>
  <div class = 'board'>
    <div><%= flight.airport %></div> 
    <div><%= flight.airline %></div>  
    <div><%= flight.flightNo %></div> 
  </div> 
  
<h1> Arrival </h1>
<%flight.destinations.forEach((arrive) => { %>
  <div class='board'>
    <div><%= arrive.airport;%></div>
    <div><%= arrive.arrival%></div> 
  </div>
<% })%>
     
<h2>Add Arrival</h2>
<form id="add-arrival" action="/flights/<%=flight._id%>/destinations" method="POST">
  <label>Destination:
    <select name="airport">
      <% destination.forEach(function(d) { %>
        <option><%= d %></option>
      <% }) %>               
    </select><br>
  </label><br>
    
  <label>Arrival Date:
    <input type="datetime-local" name ="departs">
  </label><br>
    <input type="submit" value="Create Flight">
</form>    

<h2>Tickets</h2>
<%tickets.forEach((tix) => { %>
  <div class='board'>
    <div>Seat:<%= tix.seat;%></div>
    <div>$<%= tix.price%></div> 
  </div>
<% })%>

<a href="/flights/<%=flight._id%>/tickets/new">New Ticket</a>

<%- include('../partials/footer') %>