<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>

    <p>Welcome to the Chuck Norris joke finder:</p> 
    <h3><%= joke.value %></h3>

    <form action="/get-joke" method="GET">
      <% categories.forEach(function(cat, idx) { %> 
        <div>
        <label for="<%= idx + 1 %>">
            <input id="<%= idx + 1%>" type="radio" name="category" value="<% cat %>" />
          <% cat %>
        </label>
        </div>
      <% }) %>
      <input type="submit" value="Get A Chuck Norris Joke">
    </form>

  </body>
</html>
